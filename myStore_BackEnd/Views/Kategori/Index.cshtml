
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Templates.cshtml";
}

<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">@ViewData["breadcrumbs"]</h2>
    </div>
</header>

<!-- Dashboard Counts Section-->
<section class="dashboard-counts no-padding-bottom">
    <div class="container-fluid">
        <div class="row bg-white has-shadow">
            @* Untuk Isi Body *@

            <div class="table-responsive">
                <table class="table table-striped table-bordered" style="width:100%" id="tblproduk">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kode Kategori</th>
                            <th>Keterangan</th>
                            <th class="text-center noExport">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in (dynamic)ViewData["categories"])
                        {
                            <tr>
                                <td>@Html.Encode(category.id)</td>
                                <td>@Html.Encode(category.kode_kategori)</td>
                                <td>@Html.Encode(category.keterangan)</td>
                                <td class="text-center text-nowrap">
                                    <a href="@Url.Action("Edit", "Kategori", new { id = category.id})" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Edit Data"><i class="fa fa-edit"></i></a>
                                    <a href="@Url.Action("Delete", "Kategori", new { id = category.id})" class="btn btn-danger btn-sm" id="btndelete" onclick="return confirm('Benar Akan Di Hapus data ini?');" data-toggle="tooltip" data-placement="top" title="Hapus Data"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

